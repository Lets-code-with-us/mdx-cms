{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],

    "rootDir": "./src",
    "outDir": "./dist",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
